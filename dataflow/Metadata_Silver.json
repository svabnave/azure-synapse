{
	"name": "Metadata_Silver",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Generic_DS_ADL_Parquet",
						"type": "DatasetReference"
					},
					"name": "MetadataCols"
				},
				{
					"dataset": {
						"referenceName": "Generic_DS_ADL_Parquet",
						"type": "DatasetReference"
					},
					"name": "KeyCols"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "lookup1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Table_Name as string,",
				"          MaxLength as short,",
				"          Column_Name as string,",
				"          Data_Type as string,",
				"          English_Name as string,",
				"          Key_Columns as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> MetadataCols",
				"source(output(",
				"          Table_Name as string,",
				"          Name as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> KeyCols",
				"KeyCols lookup(ERROR_FUNCTION('') == ERROR_FUNCTION(''),",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> lookup1"
			]
		}
	}
}