				"source": [
					"Yearly_Bill = \"abfss://staging@mysynstorage.dfs.core.windows.net/Agva/Spark_Yearly_Bill\"\r\n",
					"\r\n",
					"try:\r\n",
					"    df_Yearly.write.format(\"delta\").save(Yearly_Bill)\r\n",
					"    print('Table does not exist. Created new table.')\r\n",
					"except:\r\n",
					"    print('Table Found. Updating existing table...')\r\n",
					"    delta_table = DeltaTable.forPath(spark, Yearly_Bill)\r\n",
					"\r\n",
					"    result = delta_table.alias(\"target\").merge(\r\n",
					"        df_Yearly.alias(\"source\"),\r\n",
					"        \"target.Year = source.Year\") \\\r\n",
					"        .whenMatchedUpdateAll() \\\r\n",
					"        .whenNotMatchedInsertAll() \\\r\n",
					"        .execute()\r\n",
					"    \r\n",
					"    print(result)"
				],
