{
	"name": "DS_ADL_xml",
	"properties": {
		"linkedServiceName": {
			"referenceName": "LS_ADL_mysynstorage",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"DirectoryName": {
				"type": "string"
			},
			"Filename": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "Xml",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@concat(dataset().Filename,'_',utcNow(dataset().Filename))",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@dataset().DirectoryName",
					"type": "Expression"
				},
				"fileSystem": "staging"
			}
		}
	}
}